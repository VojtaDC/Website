---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const downloadHref = '/documents/vojtech-de-coninck-cv.pdf';
const locationLines = t('contact.info.location.body').split('\n');

const contactItems = [
  {
    label: t('contact.form.email'),
    value: 'vojtadeconinck@gmail.com',
    href: 'mailto:vojtadeconinck@gmail.com',
  },
  {
    label: t('contact.info.phone.title'),
    value: '+32 (0)456 01 30 17',
    href: 'tel:+32456013017',
  },
  {
    label: t('contact.info.location.title'),
    lines: locationLines,
  },
  {
    label: 'LinkedIn',
    value: 'linkedin.com/in/vojtech-de-coninck-110701296',
    href: 'https://www.linkedin.com/in/vojtech-de-coninck-110701296',
  },
  {
    label: 'GitHub',
    value: 'github.com/VojtaDC',
    href: 'https://github.com/VojtaDC',
  },
];

const educationItems = [
  {
    period: 'Sept 2025 - 2028',
    title: t('timeline.master.title'),
    meta: 'Technical University of Denmark (DTU) â€¢ Vrije Universiteit Brussel (VUB)',
    description: t('timeline.master.description'),
    border: 'border-blue-500/70',
  },
  {
    period: 'Sept 2022 - July 2025',
    title: t('timeline.graduation.title'),
    meta: 'Vrije Universiteit Brussel (VUB)',
    description: t('timeline.graduation.description'),
    border: 'border-emerald-500/70',
  },
];

const experienceItems = [
  {
    period: 'End 2023 - Present',
    title: t('timeline.business.title'),
    meta: 'Belgium',
    description: t('timeline.business.description'),
    border: 'border-purple-500/70',
  },
  {
    period: '2024 - 2025',
    title: t('timeline.coach.title'),
    meta: 'Black Devils Vorst',
    description: t('timeline.coach.description'),
    border: 'border-orange-500/70',
  },
  {
    period: '2021',
    title: t('timeline.tutoring.title'),
    description: t('timeline.tutoring.description'),
    border: 'border-sky-500/70',
  },
  {
    period: '2020 - 2022',
    title: t('timeline.retail.title'),
    meta: 'Okay Compact',
    description: t('timeline.retail.description'),
    border: 'border-green-500/70',
  },
];

const skillGroups = [
  {
    title: t('home.skills.coding.title'),
    items: [
      t('home.skills.coding.item.python'),
      t('home.skills.coding.item.cpp'),
      t('home.skills.coding.item.java'),
      t('home.skills.coding.item.assembly'),
      t('home.skills.coding.item.matlab'),
    ],
  },
  {
    title: t('home.skills.cad.title'),
    items: [
      t('home.skills.cad.item.altium'),
      t('home.skills.cad.item.inventor'),
      t('home.skills.cad.item.fusion'),
    ],
  },
  {
    title: t('home.skills.tutoring.title'),
    items: [
      t('home.skills.tutoring.item.math'),
      t('home.skills.tutoring.item.physics'),
      t('home.skills.tutoring.item.chemistry'),
      t('home.skills.tutoring.item.python'),
    ],
  },
];

const languages = [
  { name: 'Dutch', level: 'Native', value: 100 },
  { name: 'English', note: 'IELTS C1', level: 'C1 - Advanced', value: 90 },
  { name: 'French', level: 'B2 - Upper intermediate', value: 75 },
  { name: 'Czech', level: 'B2 - Upper intermediate', value: 75 },
  { name: 'Danish', note: 'Started lessons in September 2025', level: 'A1 - Elementary', value: 20 },
  { name: 'German', level: 'A1 - Elementary', value: 20 },
];
---

<BaseLayout>
  <div class="section-bg theme-transition">
    <section class="relative overflow-hidden px-6 py-16 md:py-20" data-aos="fade-up">
      <div class="absolute inset-0 pointer-events-none">
        <div class="absolute -top-32 left-1/4 h-72 w-72 rounded-full bg-blue-500/10 blur-3xl"></div>
        <div class="absolute -bottom-24 right-0 h-72 w-72 rounded-full bg-indigo-500/10 blur-3xl"></div>
      </div>
      <div class="container mx-auto relative">
        <div class="max-w-4xl">
          <div class="flex flex-wrap items-center gap-3 text-xs font-semibold uppercase tracking-[0.3em] theme-text-muted">
            <span class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-blue-500"></span>
              {t('nav.portfolio')}
            </span>
            <span
              class="rounded-full border px-3 py-1 text-[10px] font-semibold"
              style="border-color: var(--blue-primary); color: var(--blue-primary);"
            >
              {t('home.subtitle')}
            </span>
          </div>
          <h1 class="mt-6 text-4xl md:text-5xl font-bold theme-text">
            {t('cv.title')}
          </h1>
          <p class="mt-4 text-lg md:text-xl theme-text-secondary leading-relaxed">
            {t('cv.subtitle')}
          </p>
          <div class="mt-8 flex flex-wrap items-center gap-4">
            <a
              href={downloadHref}
              download="Vojtech-De-Coninck-CV.pdf"
              class="btn-download"
            >
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4"></path>
              </svg>
              {t('cv.download')}
            </a>
            <span class="text-sm theme-text-muted">{t('cv.download.note')}</span>
          </div>
        </div>
      </div>
    </section>

    <section class="px-6 pb-20">
      <div class="container mx-auto grid gap-8 lg:grid-cols-12">
        <div class="lg:col-span-4 space-y-8">
          <div class="theme-card rounded-2xl border p-6 shadow-lg" data-aos="fade-up">
            <h2 class="text-xl font-bold theme-text mb-6">{t('cv.section.contact')}</h2>
            <div class="space-y-4">
              {contactItems.map((item) => (
                <div class="flex items-start gap-3">
                  <span class="mt-2 h-2.5 w-2.5 rounded-full bg-blue-500/70"></span>
                  <div>
                    <p class="text-xs font-semibold uppercase tracking-widest theme-text-muted">{item.label}</p>
                    {item.lines ? (
                      <div class="text-sm theme-text-secondary">
                        {item.lines.map((line) => (
                          <span class="block">{line}</span>
                        ))}
                      </div>
                    ) : item.href ? (
                      <a
                        href={item.href}
                        class="text-sm font-semibold text-blue-500 transition-colors duration-300 hover:text-blue-600"
                        target={item.href.startsWith('http') ? '_blank' : undefined}
                        rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                      >
                        {item.value}
                      </a>
                    ) : (
                      <p class="text-sm theme-text-secondary">{item.value}</p>
                    )}
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="theme-card rounded-2xl border p-6 shadow-lg" data-aos="fade-up" data-aos-delay="100">
            <h2 class="text-xl font-bold theme-text mb-6">{t('cv.section.skills')}</h2>
            <div class="space-y-6">
              {skillGroups.map((group) => (
                <div>
                  <p class="text-sm font-semibold theme-text mb-3">{group.title}</p>
                  <div class="flex flex-wrap gap-2">
                    {group.items.map((item) => (
                      <span
                        class="rounded-full px-3 py-1 text-xs font-semibold"
                        style="background-color: var(--blue-light); color: var(--blue-primary); border: 1px solid var(--blue-primary);"
                      >
                        {item}
                      </span>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="theme-card rounded-2xl border p-6 shadow-lg" data-aos="fade-up" data-aos-delay="150">
            <h2 class="text-xl font-bold theme-text mb-6">{t('cv.section.languages')}</h2>
            <div class="space-y-4">
              {languages.map((language) => (
                <div class="rounded-xl border border-[color:var(--border-color)] p-4 theme-transition">
                  <div class="flex flex-wrap items-center justify-between gap-3">
                    <div>
                      <p class="font-semibold theme-text">{language.name}</p>
                      {language.note && (
                        <p class="mt-1 text-xs theme-text-muted">{language.note}</p>
                      )}
                    </div>
                    <span class="text-xs font-semibold theme-text-muted">{language.level}</span>
                  </div>
                  <div class="mt-3 h-2 rounded-full" style="background-color: var(--bg-tertiary);">
                    <div
                      class="h-2 rounded-full"
                      style={`width: ${language.value}%; background-color: var(--blue-primary);`}
                    ></div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>

        <div class="lg:col-span-8 space-y-8">
          <div class="theme-card rounded-2xl border p-6 shadow-lg" data-aos="fade-up" data-aos-delay="200">
            <h2 class="text-xl font-bold theme-text mb-6">{t('cv.section.education')}</h2>
            <div class="space-y-5">
              {educationItems.map((item) => (
                <div class={`rounded-xl border border-[color:var(--border-color)] border-l-4 ${item.border} p-5`}>
                  <div class="flex flex-wrap items-start justify-between gap-3">
                    <div>
                      <h3 class="text-lg font-semibold theme-text">{item.title}</h3>
                      {item.meta && <p class="text-sm theme-text-muted mt-1">{item.meta}</p>}
                    </div>
                    <span
                      class="rounded-full border px-3 py-1 text-xs font-semibold"
                      style="border-color: var(--blue-primary); color: var(--blue-primary);"
                    >
                      {item.period}
                    </span>
                  </div>
                  <p class="mt-4 text-sm leading-relaxed theme-text-secondary">
                    {item.description}
                  </p>
                </div>
              ))}
            </div>
          </div>

          <div class="theme-card rounded-2xl border p-6 shadow-lg" data-aos="fade-up" data-aos-delay="250">
            <h2 class="text-xl font-bold theme-text mb-6">{t('cv.section.experience')}</h2>
            <div class="space-y-5">
              {experienceItems.map((item) => (
                <div class={`rounded-xl border border-[color:var(--border-color)] border-l-4 ${item.border} p-5`}>
                  <div class="flex flex-wrap items-start justify-between gap-3">
                    <div>
                      <h3 class="text-lg font-semibold theme-text">{item.title}</h3>
                      {item.meta && <p class="text-sm theme-text-muted mt-1">{item.meta}</p>}
                    </div>
                    <span
                      class="rounded-full border px-3 py-1 text-xs font-semibold"
                      style="border-color: var(--blue-primary); color: var(--blue-primary);"
                    >
                      {item.period}
                    </span>
                  </div>
                  <p class="mt-4 text-sm leading-relaxed theme-text-secondary">
                    {item.description}
                  </p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
