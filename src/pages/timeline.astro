---
import BaseLayout from '../layouts/BaseLayout.astro';
import Timeline from '../components/Timeline.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout>
  <div class="min-h-screen section-bg theme-transition">
    <!-- Hero Section -->
    <section class="py-20 px-6">
      <div class="container mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold theme-text mb-6" data-aos="fade-up">
          {t('timeline.title')}
        </h1>
        <p class="text-xl theme-text-secondary max-w-3xl mx-auto leading-relaxed" data-aos="fade-up" data-aos-delay="200">
          {t('timeline.subtitle')}
        </p>
      </div>
    </section>

    <!-- Timeline Section -->
    <section id="timeline-section" class="py-16 px-6">
      <div class="container mx-auto">
        <Timeline />
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20 px-6">
      <div class="container mx-auto text-center">
        <div data-aos="fade-up">
          <h2 class="text-3xl font-bold theme-text mb-6">{t('timeline.cta.title')}</h2>
          <p class="text-xl theme-text-secondary mb-8 max-w-2xl mx-auto">
            {t('timeline.cta.description')}
          </p>
          <div class="space-x-4 space-y-4 md:space-y-0">
            <a 
              href={getLocalizedPath('contact', lang)}
              class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-full font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
            >
              {t('nav.contact')}
            </a>
            <a 
              href={getLocalizedPath('projects', lang)}
              class="inline-block theme-card border-2 theme-border text-current px-8 py-4 rounded-full font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
            >
              {t('nav.projects')}
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
