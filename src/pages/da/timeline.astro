---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Timeline from '../../components/Timeline.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<BaseLayout>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <!-- Hero Section -->
    <section class="py-20 px-6">
      <div class="container mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6" data-aos="fade-up">
          {t('timeline.title')}
        </h1>
        <p class="text-xl text-gray-800 max-w-3xl mx-auto leading-relaxed" data-aos="fade-up" data-aos-delay="200">
          {t('timeline.subtitle')}
        </p>
      </div>
    </section>

    <!-- Timeline Section -->
    <section id="timeline-section" class="py-16 px-6">
      <div class="container mx-auto">
        <Timeline />
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20 px-6">
      <div class="container mx-auto text-center">
        <div data-aos="fade-up">
          <h2 class="text-3xl font-bold text-gray-800 mb-6">Klar til at Arbejde Sammen?</h2>
          <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
            Uanset om du har brug for undervisning, vil diskutere ingeniørprojekter eller udforske samarbejdsmuligheder, er jeg her for at hjælpe.
          </p>
          <div class="space-x-4 space-y-4 md:space-y-0">
            <a 
              href="/da/contact/"
              class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-full font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
            >
              {t('nav.contact')}
            </a>
            <a 
              href="/da/projects/"
              class="inline-block bg-white hover:bg-gray-50 text-gray-800 px-8 py-4 rounded-full font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 border-2 border-gray-200"
            >
              {t('nav.projects')}
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- Scripts for animations -->
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      AOS.init({
        duration: 800,
        once: true,
        offset: 100
      });
    });
  </script>
</BaseLayout>
