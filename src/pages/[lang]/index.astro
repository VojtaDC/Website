---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath, getStaticPaths } from '../../i18n/utils';

export { getStaticPaths };

const { lang } = Astro.params;
const t = useTranslations(lang as any);
---
<BaseLayout>
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 -mt-8">
    <div class="container mx-auto px-6 text-center">
      <div data-aos="fade-up" data-aos-duration="1000">
        <h1 class="text-5xl md:text-7xl font-bold text-gray-800 mb-6">
          {t('home.title').split(' ').slice(0, -1).join(' ')}
          <span class="text-blue-600 block">{t('home.title').split(' ').slice(-1)}</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto leading-relaxed">
          {t('home.description')}
        </p>
        <div class="space-x-4 space-y-4 md:space-y-0">
          <a 
            href={getLocalizedPath('timeline', lang as any)}
            class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-full font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
          >
            {t('home.journey')}
          </a>
          <a 
            href={getLocalizedPath('projects', lang as any)}
            class="inline-block bg-white hover:bg-gray-50 text-gray-800 px-8 py-4 rounded-full font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 border-2 border-gray-200"
          >
            {t('home.projects')}
          </a>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2" data-aos="fade-up" data-aos-delay="1500">
        <div class="animate-bounce">
          <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-20 px-6 bg-white">
    <div class="container mx-auto">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div data-aos="fade-right">
          <h2 class="text-4xl font-bold text-gray-800 mb-6">{t('home.about')}</h2>
          <p class="text-lg text-gray-600 mb-6 leading-relaxed">
            {t('home.about.text1')}
          </p>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            {t('home.about.text2')}
          </p>
          <a 
            href={getLocalizedPath('cv', lang as any)}
            class="inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
          >
            {t('cv.title')}
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </a>
        </div>
        <div class="grid grid-cols-2 gap-6" data-aos="fade-left">
          <div class="bg-blue-50 p-6 rounded-xl text-center hover:shadow-lg transition-shadow duration-300">
            <div class="text-3xl mb-3">🎓</div>
            <h3 class="font-bold text-gray-800 mb-2">{t('home.stats.education')}</h3>
            <p class="text-gray-600 text-sm">{t('home.stats.education.desc')}</p>
          </div>
          <div class="bg-green-50 p-6 rounded-xl text-center hover:shadow-lg transition-shadow duration-300">
            <div class="text-3xl mb-3">💼</div>
            <h3 class="font-bold text-gray-800 mb-2">{t('home.stats.business')}</h3>
            <p class="text-gray-600 text-sm">{t('home.stats.business.desc')}</p>
          </div>
          <div class="bg-purple-50 p-6 rounded-xl text-center hover:shadow-lg transition-shadow duration-300">
            <div class="text-3xl mb-3">🏀</div>
            <h3 class="font-bold text-gray-800 mb-2">{t('home.stats.sports')}</h3>
            <p class="text-gray-600 text-sm">{t('home.stats.sports.desc')}</p>
          </div>
          <div class="bg-orange-50 p-6 rounded-xl text-center hover:shadow-lg transition-shadow duration-300">
            <div class="text-3xl mb-3">📚</div>
            <h3 class="font-bold text-gray-800 mb-2">{t('home.stats.teaching')}</h3>
            <p class="text-gray-600 text-sm">{t('home.stats.teaching.desc')}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links Section -->
  <section class="py-20 px-6 bg-gray-50">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl font-bold text-gray-800 mb-12" data-aos="fade-up">{t('home.explore')}</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300" data-aos="fade-up" data-aos-delay="100">
          <div class="text-4xl mb-4">📈</div>
          <h3 class="text-xl font-bold text-gray-800 mb-4">{t('home.cards.timeline.title')}</h3>
          <p class="text-gray-600 mb-6">{t('home.cards.timeline.description')}</p>
          <a href={getLocalizedPath('timeline', lang as any)} class="text-blue-600 font-semibold hover:text-blue-700 transition-colors duration-300">
            {t('home.cards.timeline.link')}
          </a>
        </div>
        <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300" data-aos="fade-up" data-aos-delay="200">
          <div class="text-4xl mb-4">🚀</div>
          <h3 class="text-xl font-bold text-gray-800 mb-4">{t('home.cards.projects.title')}</h3>
          <p class="text-gray-600 mb-6">{t('home.cards.projects.description')}</p>
          <a href={getLocalizedPath('projects', lang as any)} class="text-blue-600 font-semibold hover:text-blue-700 transition-colors duration-300">
            {t('home.cards.projects.link')}
          </a>
        </div>
        <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300" data-aos="fade-up" data-aos-delay="300">
          <div class="text-4xl mb-4">💬</div>
          <h3 class="text-xl font-bold text-gray-800 mb-4">{t('home.cards.contact.title')}</h3>
          <p class="text-gray-600 mb-6">{t('home.cards.contact.description')}</p>
          <a href={getLocalizedPath('contact', lang as any)} class="text-blue-600 font-semibold hover:text-blue-700 transition-colors duration-300">
            {t('home.cards.contact.link')}
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
