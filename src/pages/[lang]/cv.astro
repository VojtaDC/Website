          </div>
        </div>
      </div>
    </section>
  </div>

  <script>
    function toggleCVWindow() {
      const cvWindow = document.getElementById('cvWindow');
      if (cvWindow.classList.contains('hidden')) {
        cvWindow.classList.remove('hidden');
        document.body.style.overflow = 'hidden'; // Prevent background scrolling
      } else {
        cvWindow.classList.add('hidden');
        document.body.style.overflow = 'auto'; // Restore scrolling
      }
    }

    // Close modal when clicking outside
    document.getElementById('cvWindow').addEventListener('click', function(e) {
      if (e.target === this) {
        toggleCVWindow();
      }
    });

    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        const cvWindow = document.getElementById('cvWindow');
        if (!cvWindow.classList.contains('hidden')) {
          toggleCVWindow();
        }
      }
    });
  </script>
</BaseLayout>
