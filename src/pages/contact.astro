                <div>
                  <p class="text-xs font-semibold uppercase tracking-widest theme-text-muted">{t('contact.info.location.title')}</p>
                  <p class="text-sm theme-text-secondary">
                    {t('contact.info.location.body').split('\n').map((line) => (
                      <span class="block">{line}</span>
                    ))}
                  </p>
