---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<BaseLayout>
  <div class="min-h-screen theme-transition">
    <!-- Hero Section -->
    <section class="py-20 px-6" style="background-color: var(--bg-primary);">
      <div class="container mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6" style="color: var(--text-primary);">
          {t('contact.title')}
        </h1>
        <p class="text-xl max-w-3xl mx-auto leading-relaxed" style="color: var(--text-secondary);">
          {t('contact.subtitle')}
        </p>
      </div>
    </section>

    <!-- Contact Content -->
    <section class="py-16 px-6" style="background-color: var(--bg-primary);">
      <div class="container mx-auto">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Contact Information -->
          <div>
            <h2 class="text-3xl font-bold mb-8" style="color: var(--text-primary);">Let's Connect</h2>
            
            <div class="space-y-6">
              <!-- Email -->
              <div class="flex items-start space-x-4">
                <div class="p-3 rounded-lg" style="background-color: var(--blue-light);">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" style="color: var(--blue-primary);">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-1" style="color: var(--text-primary);">Email</h3>
                  <a href="mailto:vojtadeconinck@gmail.com" class="transition-colors duration-300" style="color: var(--blue-primary);" onmouseover="this.style.color='var(--blue-hover)'" onmouseout="this.style.color='var(--blue-primary)'">
                    vojtadeconinck@gmail.com
                  </a>
                </div>
              </div>
              
              <!-- Phone/WhatsApp -->
              <div class="flex items-start space-x-4">
                <div class="p-3 rounded-lg" style="background-color: var(--blue-light);">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: var(--blue-primary);">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-white mb-1">Phone / WhatsApp</h3>
                  <a href="tel:+32456013017" class="text-green-400 hover:text-green-300 transition-colors duration-300">
                    +32 (0)456 01 30 17
                  </a>
                </div>
              </div>
              
              <!-- Location -->
              <div class="flex items-start space-x-4">
                <div class="bg-purple-900/50 p-3 rounded-lg">
                  <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-white mb-1">Location</h3>
                  <p class="text-gray-300">Copenhagen, Denmark (DTU)<br>Brussels, Belgium (VUB)</p>
                </div>
              </div>
              
              <!-- Services -->
              <div class="flex items-start space-x-4">
                <div class="bg-orange-900/50 p-3 rounded-lg">
                  <svg class="w-6 h-6 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 00-2 2H8a2 2 0 00-2-2V6m8 0H8m0 0v-.5A2.5 2.5 0 0110.5 3h3A2.5 2.5 0 0116 5.5V6m-8 0c1.5 0 2.5 1 3 2.5"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-white mb-1">Services</h3>
                  <p class="text-gray-300">Professional Tutoring<br>Engineering Consultation<br>Basketball Coaching</p>
                </div>
              </div>
            </div>

            <!-- Social Links & Messaging Apps -->
            <div class="mt-12">
              <h3 class="text-xl font-bold text-white mb-6">Connect on Social Media & Messaging</h3>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <!-- WhatsApp -->
                <a href="https://wa.me/32456013017" target="_blank" 
                   class="bg-green-600 hover:bg-green-500 text-white p-4 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 text-center">
                  <svg class="w-6 h-6 mx-auto mb-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                  </svg>
                  <span class="text-sm font-semibold">WhatsApp</span>
                </a>

                <!-- Messenger -->
                <a href="https://m.me/vojta.deconinck" target="_blank" 
                   class="bg-blue-500 hover:bg-blue-600 text-white p-4 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 text-center">
                  <svg class="w-6 h-6 mx-auto mb-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.374 0 0 4.975 0 11.111c0 3.498 1.744 6.614 4.469 8.654V24l4.088-2.242c1.092.301 2.246.464 3.443.464 6.626 0 12-4.974 12-11.111C24 4.975 18.626 0 12 0zm1.191 14.963l-3.055-3.26-5.963 3.26L10.732 8.1l3.131 3.26L19.752 8.1l-6.561 6.863z"/>
                  </svg>
                  <span class="text-sm font-semibold">Messenger</span>
                </a>

                <!-- Instagram -->
                <a href="https://instagram.com/vojta.deconinck" target="_blank" 
                   class="bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white p-4 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 text-center">
                  <svg class="w-6 h-6 mx-auto mb-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                  <span class="text-sm font-semibold">Instagram</span>
                </a>

                <!-- LinkedIn -->
                <a href="https://linkedin.com/in/vojta-deconinck" target="_blank" 
                   class="bg-blue-700 hover:bg-blue-800 text-white p-4 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 text-center">
                  <svg class="w-6 h-6 mx-auto mb-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                  <span class="text-sm font-semibold">LinkedIn</span>
                </a>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div>
            <div class="theme-card rounded-xl shadow-lg p-8 border">
              <h2 class="text-2xl font-bold mb-6" style="color: var(--text-primary);">Send a Message</h2>
              <form class="space-y-6" action="mailto:vojtadeconinck@gmail.com" method="get" enctype="text/plain">
                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label for="firstName" class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">First Name</label>
                    <input 
                      type="text" 
                      id="firstName"
                      name="firstName"
                      class="theme-input w-full px-4 py-3 border rounded-lg focus:ring-2 transition-all duration-300"
                      placeholder="John"
                      required
                    />
                  </div>
                  <div>
                    <label for="lastName" class="block text-sm font-semibold mb-2" style="color: var(--text-secondary);">Last Name</label>
                    <input 
                      type="text" 
                      id="lastName"
                      name="lastName"
                      class="theme-input w-full px-4 py-3 border rounded-lg focus:ring-2 transition-all duration-300"
                      placeholder="Doe"
                      required
                    />
                  </div>
                </div>
                
                <div>
                  <label for="email" class="block text-sm font-semibold text-gray-800 mb-2">Email Address</label>
                  <input 
                    type="email" 
                    id="email"
                    name="email"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300"
                    placeholder="john.doe@example.com"
                    required
                  />
                </div>
                
                <div>
                  <label for="subject" class="block text-sm font-semibold text-gray-800 mb-2">Subject</label>
                  <select 
                    id="subject"
                    name="subject"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300"
                    required
                  >
                    <option value="">Select a subject</option>
                    <option value="Tutoring Services">Tutoring Services</option>
                    <option value="Engineering Collaboration">Engineering Collaboration</option>
                    <option value="Basketball Coaching">Basketball Coaching</option>
                    <option value="General Inquiry">General Inquiry</option>
                    <option value="Other">Other</option>
                  </select>
                </div>
                
                <div>
                  <label for="message" class="block text-sm font-semibold text-gray-800 mb-2">Message</label>
                  <textarea 
                    id="message"
                    name="body"
                    rows="5"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 resize-none"
                    placeholder="Tell me about your project or how I can help you..."
                    required
                  ></textarea>
                </div>
                
                <div class="space-y-4">
                  <button 
                    type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
                  >
                    Send Email
                  </button>
                  
                  <!-- Quick Contact Buttons -->
                  <div class="grid grid-cols-2 gap-4">
                    <a 
                      href="https://wa.me/32456013017?text=Hi%20Vojta,%20I%20found%20your%20website%20and%20would%20like%20to%20get%20in%20touch"
                      target="_blank"
                      class="bg-green-500 hover:bg-green-600 text-white px-4 py-3 rounded-lg font-semibold text-center shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
                    >
                      Quick WhatsApp
                    </a>
                    <a 
                      href="tel:+32456013017"
                      class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-3 rounded-lg font-semibold text-center shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
                    >
                      Call Now
                    </a>
                  </div>
                </div>
              </form>
            </div>

            <!-- Additional Contact Info -->
            <div class="mt-8 bg-blue-50 rounded-xl p-6">
              <h3 class="text-lg font-bold text-gray-900 mb-4">Response Time</h3>
              <div class="space-y-2 text-gray-800">
                <p>📧 Email: Within 24 hours</p>
                <p>💬 WhatsApp: Usually within 2-4 hours</p>
                <p>📞 Phone: Available Mon-Fri 9AM-6PM CET</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Stats -->
    <section class="py-16 px-6 bg-white">
      <div class="container mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">Why Work With Me?</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Academic Excellence</h3>
            <p class="text-gray-700">Civil Engineering graduate with ongoing Master's in Electrical Engineering</p>
          </div>
          
          <div class="text-center">
            <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Teaching Experience</h3>
            <p class="text-gray-700">4+ years of professional tutoring and coaching experience</p>
          </div>
          
          <div class="text-center">
            <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Quick Response</h3>
            <p class="text-gray-700">Fast communication and reliable availability across multiple platforms</p>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>