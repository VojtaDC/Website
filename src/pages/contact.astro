        <div class="lg:col-span-7 space-y-6">
          <div class="theme-card rounded-2xl border p-6 shadow-lg" data-aos="fade-up" data-aos-delay="150">
            <div class="flex items-center justify-between">
              <h2 class="text-xl font-bold theme-text">{t('contact.form.title')}</h2>
            </div>
            <form class="mt-6 space-y-4" action="mailto:vojtadeconinck@gmail.com" method="get" enctype="text/plain">
              <div class="grid gap-4 md:grid-cols-2">
                <div>
                  <label for="firstName" class="block text-xs font-semibold uppercase tracking-widest theme-text-muted">{t('contact.form.firstName')}</label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    class="theme-input mt-2 w-full rounded-lg border px-4 py-3 transition-all duration-300"
                    placeholder={t('contact.form.placeholder.firstName')}
                    required
                  />
                </div>
                <div>
                  <label for="lastName" class="block text-xs font-semibold uppercase tracking-widest theme-text-muted">{t('contact.form.lastName')}</label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    class="theme-input mt-2 w-full rounded-lg border px-4 py-3 transition-all duration-300"
                    placeholder={t('contact.form.placeholder.lastName')}
                    required
                  />
                </div>
              </div>

              <div class="grid gap-4 md:grid-cols-2">
                <div>
                  <label for="email" class="block text-xs font-semibold uppercase tracking-widest theme-text-muted">{t('contact.form.email')}</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="theme-input mt-2 w-full rounded-lg border px-4 py-3 transition-all duration-300"
                    placeholder={t('contact.form.placeholder.email')}
                    required
                  />
                </div>
                <div>
                  <label for="subject" class="block text-xs font-semibold uppercase tracking-widest theme-text-muted">{t('contact.form.subject')}</label>
                  <select
                    id="subject"
                    name="subject"
                    class="theme-input mt-2 w-full rounded-lg border px-4 py-3 transition-all duration-300"
                    required
                  >
                    <option value="">{t('contact.form.placeholder.subject')}</option>
                    <option value={t('contact.form.options.tutoring')}>{t('contact.form.options.tutoring')}</option>
                    <option value={t('contact.form.options.engineering')}>{t('contact.form.options.engineering')}</option>
                    <option value={t('contact.form.options.coaching')}>{t('contact.form.options.coaching')}</option>
                    <option value={t('contact.form.options.general')}>{t('contact.form.options.general')}</option>
                    <option value={t('contact.form.options.other')}>{t('contact.form.options.other')}</option>
