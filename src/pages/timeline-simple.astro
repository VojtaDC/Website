---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <div class="min-h-screen bg-white p-8">
    <h1 class="text-4xl font-bold text-black mb-8">Simple Timeline Test</h1>
    
    <div class="space-y-8">
      <div class="bg-gray-100 p-6 rounded-lg border-2 border-black">
        <h2 class="text-2xl font-bold text-black">2020-2022: Okay Supermarket</h2>
        <p class="text-black mt-2">Worked as a student employee</p>
      </div>
      
      <div class="bg-gray-100 p-6 rounded-lg border-2 border-black">
        <h2 class="text-2xl font-bold text-black">2021: Started Tutoring</h2>
        <p class="text-black mt-2">Began offering private tutoring services</p>
      </div>
      
      <div class="bg-gray-100 p-6 rounded-lg border-2 border-black">
        <h2 class="text-2xl font-bold text-black">Sept 2022: Bachelor Civil Engineering - VUB</h2>
        <p class="text-black mt-2">Started Bachelor's degree at VUB</p>
      </div>
      
      <div class="bg-gray-100 p-6 rounded-lg border-2 border-black">
        <h2 class="text-2xl font-bold text-black">End 2023: Founded Tutoring Business</h2>
        <p class="text-black mt-2">Established professional tutoring business</p>
      </div>
      
      <div class="bg-gray-100 p-6 rounded-lg border-2 border-black">
        <h2 class="text-2xl font-bold text-black">2024-2025: Basketball Coach</h2>
        <p class="text-black mt-2">Coached at Black Devils Vorst</p>
      </div>
      
      <div class="bg-gray-100 p-6 rounded-lg border-2 border-black">
        <h2 class="text-2xl font-bold text-black">July 2025: Bachelor Completed</h2>
        <p class="text-black mt-2">Graduated from VUB</p>
      </div>
      
      <div class="bg-gray-100 p-6 rounded-lg border-2 border-black">
        <h2 class="text-2xl font-bold text-black">Sept 2025: Master at DTU</h2>
        <p class="text-black mt-2">Starting Master's in Denmark</p>
      </div>
    </div>
  </div>
</BaseLayout>
