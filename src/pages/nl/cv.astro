---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<BaseLayout>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <!-- Hero Section -->
    <section class="py-20 px-6">
      <div class="container mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
          {t('cv.title')}
        </h1>
        <p class="text-xl text-gray-800 max-w-3xl mx-auto leading-relaxed">
          {t('cv.subtitle')}
        </p>
      </div>
    </section>

    <!-- CV content will be here -->
    <section class="py-16 px-6">
      <div class="container mx-auto text-center">
        <p class="text-lg text-gray-600">Nederlandse CV-pagina komt binnenkort...</p>
        <a href="/cv/" class="text-blue-600 hover:text-blue-700 mt-4 inline-block">
          Ga naar Engelse versie â†’
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
